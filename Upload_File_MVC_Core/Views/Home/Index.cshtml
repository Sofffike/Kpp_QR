<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
          crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

</head>
<body>
   
    <a class="navbar-brand" href="/Home/Privacy">Панель навигации</a>
    
    <div class="mb-3 d-flex justify-content-center">
        <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Index">
            <p class="h2">Сотрудник:</p>
            <div>
                <label class="form-label">Имя</label>
                <input type="text" class="form-control" name="Name" id="Name">
            </div>

            <div class="mb-3">
                <label class="form-label">Фамилия</label>
                <input type="text" class="form-control" name="SecondName" id="SecondName">
            </div>

            <div class="mb-3">
                <label class="form-label">Отчество</label>
                <input type="text" class="form-control" name="ThirdName" id="ThirdName">
            </div>

            <p class="h3">Паспортные данные:</p>
            <div class="mb-3">
                <label class="form-label">Серия</label>
                <input type="text" class="form-control" name="DocSeries" id="ThirdName">
            </div>

            <div class="mb-3">
                <label class="form-label">Номер</label>
                <input type="text" class="form-control" name="DocNumber" id="ThirdName">
            </div>

            <div class="mb-3">
                <label class="form-label">Кем выдан</label>
                <input type="text" class="form-control" name="DocWhom" id="ThirdName">
            </div>
            <p class="h3">Фото на пропуск:</p>
            <div class="mb-3">

                <input class="form-control" type="file" id="postedFiles" name="postedFiles" multiple>
            </div>
            <div class="mb-3">
                <input type="submit" class="btn btn-primary" value="Занести сотрудника" />
                <br />
                <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                <img class="img-thumbnail" value="@ViewBag.FileQr">
            </div>
           

            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                <input type="text" name="qrcode" />
                <input type="submit" value="Generate" />
            }
            <hr />
            @if (ViewBag.QRCodeImage != null)
            {
                <img src="@ViewBag.QRCodeImage" alt="" style="height:150px;width:150px" />
            }


        </form>
    </div>
</body>
</html>